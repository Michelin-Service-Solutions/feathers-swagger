{
	"env": {
		"es6": true,
		"node": true,
		"mocha": true
	},
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"extends": "eslint:recommended",
	"rules": {
		"indent": [ "error", "tab", { "SwitchCase": 1 } ],
		"semi": [ "error", "never" ],
		"no-unused-vars": ["warn", { "args": "none"} ],
		"linebreak-style": [ "error", "unix" ]
	},
	"globals": {
		"utilities": false
	}
}
